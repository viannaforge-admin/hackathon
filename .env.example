# Optional OpenAI settings (used by llm-explainer-service)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0

# Feature flags
USE_LLM_EXPLAINER=true
USE_LLM_KEYWORD_MINER=true

# Baseline keyword miner tuning
KEYWORD_MINER_BATCH_SIZE=200
KEYWORD_MINER_WORKERS=3

# Keyword DB (baseline-service)
KEYWORD_DB_ENABLED=true
KEYWORD_DB_DSN=postgresql://postgres:postgres@keyword-db:5432/keywords
OPENAI_KEYWORD_TIMEOUT_SECONDS=15
KEYWORD_MINER_BATCH_SIZE=20
KEYWORD_MINER_MAX_RETRIES=5
